{
	"layer": "top",
	"output": [ "*" ],
	"height": 10,
	"position": "top",
	"margin-top": 0,
	"margin-bottom": 0,
	"margin-left": 0,
	"margin-right": 0,
	"exclusive": true,
  "icon-theme": "Tela circle grey",
	"passthrough": false,
	"reload_style_on_change": true,
	"modules-left": [ "group/pill#left" ],
	"custom/spacer": {
		"format": " ",
		"tooltip": false
	},
	"hyprland/workspaces": {
		"all-outputs": true,
		"active-only": false,
		"on-click": "activate",
		"disable-scroll": true,
		"persistent-workspaces": {}
	},
	"hyprland/window": {
		"format": " \uf303 {0}",
		"rotate": 0,
		"separate-outputs": true,
		"max-length": 50
	},
	"group/pill#left": {
		"orientation": "inherit",
		"modules": [ "hyprland/workspaces", "custom/spacer", "hyprland/window" ]
	},
	"modules-center": [ "group/pill#center" ],
	"idle_inhibitor": {
		"format": "{icon}",
		"rotate": 0,
		"format-icons": {
			"activated": "\udb80\udd76",
			"deactivated": "\udb81\udeca"
		},
		"justify": "center",
		"tooltip": "false"
	},
	"clock": {
		"format": "{:%H:%M}",
		"rotate": 0,
		"tooltip-format": "<span>{calendar}</span>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"on-scroll": 1,
			"on-click-right": "mode",
			"format": {
				"months": "<span color='#ffead3'><b>{}</b></span>",
				"weekdays": "<span color='#ffcc66'><b>{}</b></span>",
				"today": "<span color='#ff6699'><b>{}</b></span>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"group/pill#center": {
		"orientation": "inherit",
		"modules": [ "idle_inhibitor", "custom/spacer", "clock" ]
	},
	"modules-right": [ "group/pill#right1", "custom/spacer", "group/pill#right2", "custom/spacer", "group/pill#right3" ],
	"custom/display": {
		"format": "\udb84\udd04 ",
		"rotate": 0,
		"tooltip-format": "\udb84\udd04 Display settings",
		"on-click": "nwg-displays"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"rotate": 0,
		"format-muted": "󰖁 ",
		"on-click": "pavucontrol-qt -t 3",
		"tooltip-format": "{icon} {desc} // {volume}%",
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["󰕿", "󰖀", "󰕾"]
		}
	},
	"battery": {
		"format": "{icon} {capacity}%",
		"rotate": 0,
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-alt": "{time} {icon}",
		"format-icons": ["", "", "", "", ""]
	},
	"group/pill#right1": {
		"orientation": "inherit",
		"modules": [ "pulseaudio", "custom/spacer", "custom/display", "custom/spacer", "battery" ]
	},
	"tray": {
		"icon-size": 16,
		"icon-size-multiplier": 1.6
	},
	"group/pill#right2": {
		"orientation": "inherit",
		"modules": [ "tray" ]
	},
	"custom/swaync": {
		"exec-if": "swaync-client --count --skip-wait 1>2 /dev/null",
		"format": "{icon} {0}",
		"tooltip": true,
		"format-icons": {
			"notification": "<span foreground='red'><sup></sup></span>",
			"dnd-notification": "<span foreground='red'><sup></sup></span>",
			"inhibited-notification": "<span foreground='red'><sup></sup></span>",
			"inhibited-none": "",
			"dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
			"dnd-inhibited-none": "",
			"dnd-none": "",
			"dnd": "",
			"none": ""
		},
		"return-type": "json",
		"exec": "pgrep -x swaync && swaync-client -swb",
		"on-click": "swaync-client -t -sw",
		"escape": true
	},
	"group/pill#right3": {
		"orientation": "inherit",
		"modules": [ "custom/swaync", "custom/spacer" ]
	}
}
